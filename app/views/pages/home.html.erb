<div class="container mt-5">
  <h1>ChatGPT-App</h1>
  <p class="subtitle_gray"><%= "UUID: #{@uuid}" %></p>

  <div class="col-lg-12 col-xs-12">
    <%= render partial: "ai/request_form", locals: { uuid: @uuid } %>
  </div>

  <hr class="col-xs-12">

  <%= turbo_stream_from "channel_#{@uuid}" %>

  <div class="card">
    <div class="card-header">
      Resposta
    </div>
    <div class="card-body">
      <div id="ai_output" class="mb-3">
        <%= render partial: "ai/output", locals: { generated_idea: "" } %>
      </div>
      <div id="ai_output_image" class="mb-3">
        <%= render partial: "ai/output_image", locals: { generated_image: "" } %>
      </div>
    </div>
  </div>
</div>

